{% extends 'base.html.twig' %}

{% block body %}
	<article class="grid-container">
        <br>
        <div class="text-center">
            <h2>Productos: </h2>
            <hr>
        </div>
    	<div class="grid-x grid-margin-x small-up-2 medium-up-2 large-up-4">
			{%for producto in productos%}
                <div class="cell">
            		<img class="thumbnail" src="https://placehold.it/500x600">
            		<h5>{{producto.getName()}}</h5>
            		<p>${{producto.getPrice()}}</p>
            		<a href="{{path('productDetail',{id:producto.getId()})}}" class="button expanded">Detalles</a>
            		<a href="#" class="button expanded" id="addToCart">Agregar a Carrito</a>
      			</div>
            {%endfor%}
        </div>
	</article>
{% endblock %}
